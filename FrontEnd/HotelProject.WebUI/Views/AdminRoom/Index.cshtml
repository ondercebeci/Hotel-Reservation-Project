@model List<ResultRoomDto>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
	int count = 0;
}




<table class="table table-bordered">
	<tr>
		<th>#</th>
		<th>Oda Numarası</th>
		<th>Balık</th>
		<th>Sil</th>
		<th>Güncelle</th>
		<th>Detaylar</th>
	</tr>
	@foreach (var item in Model)
	{
		count++;
		<tr>
			<th>@count</th>
			<td>@item.RoomNumber</td>
			<td>@item.Title</td>
			<td><a href="/Room/DeleteRoom/@item.RoomID/" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
			<td><a href="/Room/UpdateRoom/@item.RoomID/" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
		</tr>
	}
</table>
<a href="/Room/AddRoom/" class="btn mb-1 btn-rounded btn-outline-warning">Yeni Oda Girişi</a>

